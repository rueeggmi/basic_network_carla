{
    "name": "Carla_simple_network",
    "n_gpu": 1,

    "arch": {
        "type": "CarlaModel",
        "args": {}
    },
    "data_loader": {
        "type": "CarlaDataLoader",
        "args":{
            "data_dir": "/data/scratch/michelle/e2depth_dataset/datacollector/dataset_images2",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
    ],    
    "metrics2": [
        "accuracy", "top_k_acc"
    ],
    "loss_weights": {
        "steer": 1,
        "throttle": 1,
        "brake": 1,
        "speed": 1
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}
