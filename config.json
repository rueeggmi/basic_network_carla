{
    "name": "Carla_simple_network",
    "n_gpu": 1,

    "arch": {
        "type": "CarlaModel",
        "args": {}
    },
    "data_loader": {
        "type": "CarlaDataLoader",
        "args":{
            "data_dir": "/data/storage/michelle/e2depth_dataset/1_img_dataset",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0002,
            "weight_decay": 0,
            "betas": [0.7,0.85],
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
    ],    
    "metrics2": [
        "accuracy", "top_k_acc"
    ],
    "loss_weights": {
        "steer": 1.0,
        "throttle": 1.0,
        "brake": 1.0,
        "speed": 1.0
    },
    "grad_clipping": 1.0,
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "/data/storage/michelle/carla_basic_network/saved",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 1000,

        "tensorboard": true
    }
}
